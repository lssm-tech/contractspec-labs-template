{
  "name": "lssm",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/tools/*",
    "packages/libs/*",
    "packages/integrations/*",
    "packages/modules/*",
    "packages/examples/*",
    "packages/bundles/*",
    "packages/apps/*"
  ],
  "scripts": {
    "rulesync:all": "bunx rulesync generate --targets \"*\" --features \"*\"",
    "rulesync:opencode": "bunx rulesync generate --targets opencode --features \"*\"",
    "rulesync:claude": "bunx rulesync generate --targets claudecode --features \"*\"",
    "rulesync:cursor": "bunx rulesync generate --targets cursor --features \"*\"",
    "rulesync:codex": "bunx rulesync generate --targets codex --features \"*\"",
    "release:version": "changeset version --verbose && bun update",
    "release:publish": "turbo run publish:pkg --force",
    "knip": "knip",
    "clean": "turbo run clean",
    "lint": "turbo run lint --continue",
    "dev": "turbo run dev --filter=\"!@contractspec/app.*\"",
    "dev:web": "turbo run dev --filter=\"@contractspec/app.web-*\"",
    "dev:api": "turbo run dev --filter=\"@contractspec/app.api-*\"",
    "dev:not-apps": "turbo watch build --filter=\"!@contractspec/app.*\"",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=\"@contractspec/app.web-*\"",
    "build:api": "turbo run build --filter=\"@contractspec/app.api-*\"",
    "build:worker": "turbo run build --filter=\"@contractspec/app.worker-*\"",
    "build:server": "turbo run build --filter=\"@contractspec/app.api-*\" --filter=\"@contractspec/app.worker-*\"",
    "build:types": "turbo run build:types",
    "build:not-apps": "turbo run build --filter=\"!@contractspec/app.*\"",
    "db:generate": "turbo run db:generate",
    "db:deploy": "turbo run db:deploy"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^1.0.0",
    "contractspec": "1.61.0",
    "@contractspec/eslint-plugin-design-system": "1.61.0",
    "@types/bun": "^1.3.8",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-i18next": "^6.1.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "knip": "^5.83.1",
    "memoirist": "^0.4.0",
    "next": "16.1.6",
    "patch-package": "^8.0.1",
    "prettier": "3.8.1",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo-ignore": "^2.8.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "turbo": "^2.8.3",
    "semver": "^7.7.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "author": "Th√©o Boutron <tboutron@lssm.co>",
  "packageManager": "bun@1.3.5",
  "prisma": {
    "schema": "packages/libs/database/prisma/schema.prisma"
  },
  "overrides": {
    "nativewind": "5.0.0-preview.2",
    "expo": "^54.0.0",
    "react-native": "0.81.4",
    "react-native-css": "3.0.0",
    "lightningcss": "1.30.1"
  }
}
