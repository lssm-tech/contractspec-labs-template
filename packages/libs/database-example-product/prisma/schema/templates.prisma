/// Template data models supporting the Phase 9 template applications.
/// All entities live inside the `lssm_sigil` schema to keep tenant data together.

// ------------------------
// To-dos application models
// ------------------------

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT

  @@schema("lssm_sigil")
}

model TaskCategory {
  id        String  @id @default(cuid())
  projectId String
  name      String
  color     String?

  tasks Task[]

  project StudioProject @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("template_task_category")
  @@schema("lssm_sigil")
}

model Task {
  id          String       @id @default(cuid())
  projectId   String
  categoryId  String?
  title       String
  description String?
  completed   Boolean      @default(false)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  tags        Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project  StudioProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  category TaskCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([projectId, completed])
  @@index([categoryId])
  @@map("template_task")
  @@schema("lssm_sigil")
}

// ------------------------
// Messaging application models
// ------------------------

model Conversation {
  id        String  @id @default(cuid())
  projectId String
  name      String?
  isGroup   Boolean @default(false)
  avatarUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project       StudioProject             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  messages      Message[]
  participants  ConversationParticipant[]
  lastMessageId String?

  @@index([projectId, updatedAt])
  @@map("template_conversation")
  @@schema("lssm_sigil")
}

model ConversationParticipant {
  id             String    @id @default(cuid())
  conversationId String
  projectId      String
  userId         String
  displayName    String?
  role           String?
  joinedAt       DateTime  @default(now())
  lastReadAt     DateTime?

  conversation Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  project      StudioProject @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([projectId])
  @@map("template_conversation_participant")
  @@schema("lssm_sigil")
}

model Message {
  id             String        @id @default(cuid())
  conversationId String
  projectId      String
  senderId       String
  senderName     String?
  content        String
  attachments    Json?
  status         MessageStatus @default(SENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  conversation Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  project      StudioProject @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([projectId])
  @@map("template_message")
  @@schema("lssm_sigil")
}

enum MessageStatus {
  SENT
  DELIVERED
  READ

  @@schema("lssm_sigil")
}

// ------------------------
// Recipe application models (i18n-ready)
// ------------------------

model RecipeCategory {
  id     String  @id @default(cuid())
  nameEn String
  nameFr String
  icon   String?

  recipes Recipe[]

  @@map("template_recipe_category")
  @@schema("lssm_sigil")
}

model Recipe {
  id         String  @id @default(cuid())
  projectId  String
  categoryId String?

  slugEn String
  slugFr String
  nameEn String
  nameFr String

  descriptionEn   String?
  descriptionFr   String?
  heroImageUrl    String?
  prepTimeMinutes Int?
  cookTimeMinutes Int?
  servings        Int?
  isFavorite      Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project      StudioProject       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  category     RecipeCategory?     @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  ingredients  RecipeIngredient[]
  instructions RecipeInstruction[]

  @@index([projectId, categoryId])
  @@map("template_recipe")
  @@schema("lssm_sigil")
}

model RecipeIngredient {
  id       String @id @default(cuid())
  recipeId String
  nameEn   String
  nameFr   String
  quantity String
  ordering Int    @default(0)

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([recipeId, ordering])
  @@map("template_recipe_ingredient")
  @@schema("lssm_sigil")
}

model RecipeInstruction {
  id        String @id @default(cuid())
  recipeId  String
  contentEn String
  contentFr String
  ordering  Int    @default(0)

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([recipeId, ordering])
  @@map("template_recipe_instruction")
  @@schema("lssm_sigil")
}

















