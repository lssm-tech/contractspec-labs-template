{
  "name": "@contractspec/lib.ui-kit-core",
  "version": "1.63.0",
  "description": "Core UI primitives and utilities",
  "keywords": [
    "contractspec",
    "ui",
    "core",
    "primitives",
    "tailwind",
    "typescript"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "clean": "rm -rf dist",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "prebuild": "contractspec-bun-build prebuild",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "catalog:build",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@contractspec/tool.typescript": "catalog:contractspec",
    "typescript": "catalog:",
    "@contractspec/tool.bun": "workspace:*"
  },
  "exports": {
    ".": "./src/index.ts",
    "./utils": "./src/utils.ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "bun": "./dist/index.js",
        "browser": "./dist/browser/index.js",
        "default": "./dist/index.js"
      },
      "./utils": {
        "types": "./dist/utils.d.ts",
        "bun": "./dist/utils.js",
        "browser": "./dist/browser/utils.js",
        "default": "./dist/utils.js"
      }
    },
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lssm-tech/contractspec.git",
    "directory": "packages/libs/ui-kit-core"
  },
  "homepage": "https://contractspec.io"
}
