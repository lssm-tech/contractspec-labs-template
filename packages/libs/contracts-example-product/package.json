{
  "name": "@contractspec/lib.contracts-example-product",
  "version": "0.4.0",
  "type": "module",
  "scripts": {
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun run prebuild && bun run build:bundle && bun run build:types",
    "build:bundle": "contractspec-bun-build transpile",
    "build:types": "contractspec-bun-build types",
    "prebuild": "contractspec-bun-build prebuild",
    "typecheck": "tsc --noEmit",
    "dev": "bun build:bundle --watch",
    "clean": "rimraf dist .turbo",
    "lint": "bun lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "test": "echo \"Skipped - no bundle tests configured yet\""
  },
  "devDependencies": {
    "@contractspec/tool.bun": "catalog:contractspec",
    "@contractspec/tool.typescript": "catalog:contractspec",
    "tsdown": "catalog:build",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@contractspec/lib.contracts": "2.0.0",
    "@contractspec/lib.contracts-spec": "catalog:contractspec",
    "@contractspec/lib.schema": "3.0.0"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "bun": "./dist/index.js",
        "node": "./dist/node/index.js",
        "browser": "./dist/browser/index.js",
        "default": "./dist/index.js"
      }
    }
  }
}
