{
  "name": "@contractspec/lib.gql-client-example-product",
  "version": "0.2.0",
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "bun run lint:fix",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src",
    "publish:pkg": "bun publish --tolerate-republish --ignore-scripts --verbose",
    "publish:pkg:canary": "bun publish:pkg --tag canary",
    "build": "bun run prebuild && bun run build:bundle && bun run build:types",
    "build:bundle": "contractspec-bun-build transpile",
    "build:types": "contractspec-bun-build types",
    "prebuild": "contractspec-bun-build prebuild",
    "typecheck": "tsc --noEmit",
    "dev": "concurrently \"bun build:bundle --watch\" \"bun gql:dev\"",
    "gql:generate": "bun graphql-codegen --config codegen.ts",
    "gql:dev": "bun graphql-codegen --config codegen.ts --watch"
  },
  "dependencies": {
    "@graphql-codegen/client-preset": "^5.2.3",
    "@contractspec/lib.schema": "3.0.0"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.2",
    "@graphql-codegen/cli": "^6.1.2",
    "@contractspec/tool.typescript": "catalog:contractspec",
    "@contractspec/tool.tsdown": "catalog:contractspec",
    "@parcel/watcher": "^2.5.6",
    "tsdown": "catalog:build",
    "typescript": "catalog:"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "type": "module",
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "bun": "./dist/index.js",
        "node": "./dist/node/index.js",
        "browser": "./dist/browser/index.js",
        "default": "./dist/index.js"
      }
    }
  }
}
